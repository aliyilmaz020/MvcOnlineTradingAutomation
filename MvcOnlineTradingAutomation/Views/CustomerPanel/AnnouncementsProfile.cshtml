@model List<MvcOnlineTradingAutomation.Models.Entities.Message>
@foreach (var x in Model)
{
    <div class="timeline timeline-inverse">
        <!-- timeline time label -->
        <div class="time-label">
            <span class="bg-warning">
                @x.Date.ToString("dd MMM. yyyy")
            </span>
        </div>
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <div>
            <i class="fas fa-envelope bg-primary"></i>
            <div class="timeline-item">
                <span class="time"><i class="far fa-clock"></i> @x.Date.ToString("HH:mm")</span>
                <h3 class="timeline-header" style="color:blue;font-weight:bold;">@x.Subject</h3>
                <div class="timeline-body">
                    @x.Content
                </div>
            </div>
        </div>
    </div>
}
