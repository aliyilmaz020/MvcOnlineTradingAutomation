@model MvcOnlineTradingAutomation.Models.Entities.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<h2>Mvc Online Ticari Otomasyon Müşteri Bilgileri</h2>
<form action="/CustomerPanel/Index2" method="post">
    <table class="table table-hover">
        <tr>
            <td><label>E-Posta Adresi: @HttpContext.Current.User.Identity.Name</label></td>
        </tr>
        <tr>
            <td><input name="CustomerName" value="@Model.CustomerName" class="form-control" /></td>
        </tr>
        <tr>
            <td><input name="CustomerSurname" value="@Model.CustomerSurname" class="form-control" /></td>
        </tr>
        <tr>
            <td><input name="CustomerCity" value="@Model.CustomerCity" class="form-control" /></td>
        </tr>
        <tr>
            <td><input name="CustomerPassword" value="@Model.CustomerPassword" class="form-control" /></td>
        </tr>
    </table>
    <button style="margin-left:12px;" class="btn btn-warning">Bilgilerini Güncelle</button>
</form>