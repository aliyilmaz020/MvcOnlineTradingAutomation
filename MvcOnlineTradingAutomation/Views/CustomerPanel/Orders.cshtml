@model List<MvcOnlineTradingAutomation.Models.Entities.SaleOperation>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<h2>Siparişlerim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Product.ProductName</td>
            <td>@x.Price ₺</td>
            <td>@x.Date.ToShortDateString()</td>
        </tr>
    }
</table>
