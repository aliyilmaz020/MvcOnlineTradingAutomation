@using MvcOnlineTradingAutomation.Models.Entities
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4" style="background-color:lightgrey;height:auto; padding:5px; font-size:22px;">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.DepartmentName</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.EmployeeId</td>
            <td>@x.EmployeeName</td>
            <td>@x.EmployeeSurname</td>
            <td>@x.EmployeeImage</td>
            <td><a href="/Department/DepartmentEmployeeSale/@x.EmployeeId" class="btn btn-dark" style="background-color:lightslategrey">Satışlar</a></td>
        </tr>
    }
</table>
